{
  "name": "afp-finance-app",
  "version": "1.0.0",
  "description": "Personal Finance App with AI-Powered Email Transaction Detection",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel --filter \"@afp/web\" --filter \"@afp/email-service\" dev",
    "dev:web": "pnpm --filter \"@afp/web\" dev",
    "dev:api": "pnpm --filter \"@afp/email-service\" dev",
    "build": "pnpm --filter \"@afp/shared-types\" build && pnpm --filter \"@afp/web\" --filter \"@afp/email-service\" build",
    "build:web": "pnpm --filter \"@afp/shared-types\" build && pnpm --filter \"@afp/web\" build",
    "build:api": "pnpm --filter \"@afp/shared-types\" build && pnpm --filter \"@afp/email-service\" build",
    "start:web": "cd apps/web && pnpm start",
    "start:api": "cd apps/email-service && pnpm start",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test --watch",
    "test:web": "pnpm --filter \"@afp/web\" test",
    "test:api": "pnpm --filter \"@afp/email-service\" test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --report-unused-disable-directives",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "type-check": "pnpm -r exec tsc --noEmit",
    "db:migrate": "echo 'Run: supabase db push'"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "20.19.19",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "vitest": "1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "keywords": [
    "finance",
    "budgeting",
    "ai",
    "email-processing",
    "pwa",
    "react",
    "nodejs",
    "supabase",
    "railway"
  ],
  "author": "AFP Finance Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/afp-finance-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/afp-finance-app/issues"
  },
  "homepage": "https://github.com/your-username/afp-finance-app#readme"
}
